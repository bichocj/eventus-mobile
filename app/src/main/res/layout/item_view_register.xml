<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:id="@+id/Register_Icon"
        android:layout_alignParentTop="true"
        android:src="@mipmap/ic_account_circle_black_24dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerVertical="true"
        android:layout_alignBottom="@+id/Register_ImgV"
        android:layout_alignParentRight="false" />
    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/nameRegister_tv"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/Register_Icon" />


    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:id="@+id/Register_ImgV"
        android:layout_toRightOf="@+id/nameRegister_tv"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_cruz_black" />
</RelativeLayout>